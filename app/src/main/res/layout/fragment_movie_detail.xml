<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nguyen.hoang.movierating.MovieRating.MovieDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_movie_list"
        android:fillViewport="true"
        android:padding="@dimen/default_one_unit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/default_one_unit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <nguyen.hoang.movierating.CustomView.ScaleImageView
                    android:id="@+id/img_poster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_one_unit"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/colorAccent"
                    android:src="@drawable/sample_movie" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_one_unit"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/default_one_unit">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sample Title"
                        android:textAllCaps="true"
                        android:textColor="@color/text_title"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_one_unit"
                        android:numStars="10"
                        android:stepSize="0.5" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/default_one_unit"
                        android:background="@color/bg_movie_list" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_one_unit"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="@dimen/default_one_unit"
                        android:text="March 2015" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/default_one_unit"
                        android:background="@color/bg_movie_list" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_one_unit"
                        android:text="@string/lorem"
                        android:textSize="@dimen/font_small" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_margin"
                    android:drawableLeft="@drawable/ic_movie"
                    android:drawablePadding="@dimen/default_one_unit"
                    android:text="@string/trailer" />

                <nguyen.hoang.movierating.CustomView.AutofitRecyclerView
                    android:id="@+id/recycler_trailers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="150dp"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
